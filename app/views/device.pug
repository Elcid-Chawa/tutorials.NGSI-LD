mixin devicesForFarm(id)
  p(style="color:#000000;")
    strong Devices on Farm 
      code(style="font-size:large") urn:ngsi-ld:Building:#{id}
  ul.devices
    li.device
      li.device(style="background-image: url('/img/warehouse-full.svg')")
        code 
          strong filling#{id}
          | &nbsp;
          span(id=`filling${id}`)
      li.device(style="background-image: url('/img/temperature.svg')")
        code 
          strong temperature#{id}
          | &nbsp;
          span(id=`temperature${id}`)

    //-    li.device(style="background-image: url('/img/door-locked.svg')")
          code
            strong door#{id}
            | &nbsp;
            span(id=`door${id}`)
        li.device(style="background-image: url('/img/bell-off.svg')")
          code 
            strong bell#{id}
            | &nbsp;
            span(id=`bell${id}`)
        li.device(style="background-image: url('/img/motion-sensor.svg')")
          code 
            strong motion#{id}
            | &nbsp;
            span(id=`motion${id}`)
        li.device(style="background-image: url('/img/lamp-off.svg')")
          code 
            strong lamp#{id}
            | &nbsp;
            span(id=`lamp${id}`)
  form.device(action="/device/command")
    input(type="text" style="display:none"  name="id" value=`${id}`)
    select(name="action")
      option(value="refill") Refill Hay
      option(value="add") Add Hay
      option(value="remove") Remove Hay
      option(value="raise") Raise Temperature
      option(value="lower") Lower Temperature
      //- option(value="ring") Ring Bell
          option(value="presence") Detect Motion
          option(value="unlock") Unlock Door
          option(value="open") Open Door
          option(value="close") Close Door
          option(value="lock") Lock Door
          option(value="on") Lamp On
          option(value="off") Lamp Off
    | &nbsp;
    input(type="submit" value=`Send` class="button")